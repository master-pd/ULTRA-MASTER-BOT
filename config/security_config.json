{
  "encryption": {
    "enabled": true,
    "algorithm": "AES-256-GCM",
    "key_rotation_days": 7,
    "encrypt_local_files": true,
    "encrypt_remote_data": true
  },
  "stealth": {
    "user_agent_rotation": true,
    "rotation_interval": 30,
    "ip_rotation": true,
    "proxy_list_update": true,
    "behavior_mimicking": true,
    "random_delays": true,
    "min_delay": 1,
    "max_delay": 5,
    "mouse_movement": true,
    "typing_simulation": true,
    "human_scrolling": true
  },
  "firewall": {
    "enabled": true,
    "block_suspicious_ips": true,
    "rate_limiting": true,
    "max_requests_per_minute": 60,
    "geo_blocking": false,
    "allowed_countries": ["BD", "US", "GB", "CA", "AU"],
    "block_tor": true,
    "block_vpn": false
  },
  "monitoring": {
    "log_all_activities": true,
    "log_level": "INFO",
    "alert_on_suspicious": true,
    "suspicious_patterns": [
      "automation_detected",
      "unusual_timing",
      "repetitive_behavior",
      "rapid_requests"
    ],
    "auto_backup_on_alert": true,
    "shutdown_on_detection": false,
    "max_detections_before_shutdown": 5,
    "alert_channels": {
      "telegram": false,
      "email": false,
      "webhook": false,
      "desktop": true
    }
  },
  "authentication": {
    "require_auth": false,
    "auth_token_expiry": 24,
    "max_login_attempts": 5,
    "lockout_duration": 30,
    "two_factor_auth": false
  },
  "backup": {
    "auto_backup": true,
    "backup_interval": 3600,
    "max_backups": 10,
    "encrypt_backups": true,
    "backup_to_cloud": false,
    "cloud_provider": "firebase",
    "local_backup_path": "data/backups"
  },
  "updates": {
    "auto_update": true,
    "check_interval": 86400,
    "update_channel": "stable",
    "verify_signatures": true,
    "rollback_on_failure": true
  },
  "privacy": {
    "clear_logs_on_exit": false,
    "log_retention_days": 30,
    "anonymize_data": true,
    "data_minimization": true,
    "cookie_cleanup": true
  },
  "network": {
    "use_tor": false,
    "use_proxy": true,
    "verify_ssl": true,
    "timeout": 30,
    "max_retries": 3,
    "retry_delay": 5
  }
}